<body style="background:url(https://www.brasdiesel.com.br//_uploads/Conteudo/NTG_Scania_18.jpg); background-size:cover; ">
    <form action="/Caminhao/UpdateCaminhao" method="post">
        <div class="form-group" hidden>
            <label for="idonme">Modelo</label>
            <input type="text" value="@ViewBag.Caminhao?.cam_id" class="form-control" id="id" name="id" aria-describedby="nome" placeholder="id" readonly>
        </div>
        <div class="form-group">
            <label for="idonme">Modelo</label>
            <input type="text" value="@ViewBag.Caminhao?.cam_modelo" class="form-control" id="cam_modelo" name="cam_modelo" aria-describedby="nome" placeholder="Digite o nome" required>
        </div>
        <div class="form-group">
            <label for="idendereco">Ano</label>
            <input type="text" class="form-control" id="cam_ano" value="@ViewBag.Caminhao?.cam_ano" name="cam_ano" aria-describedby="endereco" required>
        </div>
        <div class="form-group">
            <label for="idnumero">Cor</label>
            <input type="text" class="form-control" id="cam_cor" value="@ViewBag.Caminhao?.cam_cor" name="cam_cor" aria-describedby="numero" required>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Salvar</button>
    </form>
</body>
