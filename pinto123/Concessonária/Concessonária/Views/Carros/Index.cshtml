@{
}
<body style="background:url(' https://media.istockphoto.com/id/1203242105/pt/foto/race-car-motorcycle-racetrack-after-rain-on-a-sunny-day-fast-motion-blur-effect-ready-to-race.jpg?s=170667a&w=0&k=20&c=ySpIaDi9oK8UEM_gArr8ytF4D-AUbsTyJb3Qf4t65Sk='); background-size:cover;">
    <h1>Lista de Carros</h1>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.4.1/css/bootstrap.min.css">

    <table class="table table-dark">


        <tr>
            <th scope="col">id</th>
            <th scope="col">Modelo</th>
            <th scope="col">Ano</th>
            <th scope="col">Cor</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>

        <thead>
        </thead>
        <tbody>
            @foreach (var item in @ViewBag.Carros)
            {
                <tr>
                    <th scope="row">@item.car_id</th>
                    <td>@item.car_modelo</td>
                    <td>@item.car_ano</td>
                    <td>@item.car_cor</td>

                    <td>
                        <a href="/Carros/Apagar/@item.car_id" name="id" id="id" class="btn btn-danger">Apagar</a>
                    </td>

                    <td>
                        <a href="/Carros/Update/@item.car_id" name="id" id="id" class="btn btn-primary">Atualizar</a>
                    </td>


                </tr>


            }

        </tbody>
    </table>

    <div class='d-flex justify-content-center align-items-center'>
        <a href='/Carros/create' class='btn btn-success'>Inserir</a>
    </div>
</body>
