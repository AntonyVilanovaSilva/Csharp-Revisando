@{
}
<form action="/Motos/UpdateMotos" method="post">
    <div class="form-group" hidden>
        <label for="idonme">Modelo</label>
        <input type="text" value="@ViewBag.Motos?.mot_id" class="form-control" id="id" name="id" aria-describedby="nome" placeholder="id" readonly>
    </div>
    <div class="form-group">
        <label for="idonme">Modelo</label>
        <input type="text" value="@ViewBag.Motos?.mot_modelo" class="form-control" id="mot_modelo" name="mot_modelo" aria-describedby="nome" placeholder="Digite o nome" required>
    </div>
    <div class="form-group">
        <label for="idendereco">Ano</label>
        <input type="text" class="form-control" id="mot_ano" value="@ViewBag.Motos?.mot_ano" name="mot_ano" aria-describedby="endereco" required>
    </div>
    <div class="form-group">
        <label for="idnumero">Cor</label>
        <input type="text" class="form-control" id="mot_cor" value="@ViewBag.Motos?.mot_cor" name="mot_cor" aria-describedby="numero" required>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>